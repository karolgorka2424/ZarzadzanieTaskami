@model ZarzadzanieTaskami.Models.ProjectTask

@{
    ViewData["Title"] = "Tworzenie zadania";
}

<h1>Utwórz zadanie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CzyZakonczony" /> Status
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ProjektId" class="control-label">Projekt</label>
                <select asp-for="ProjektId" class="form-control" asp-items="ViewBag.ProjektId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">wróć do zadań</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
