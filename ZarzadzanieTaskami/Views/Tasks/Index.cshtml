@model IEnumerable<ZarzadzanieTaskami.Models.ProjectTask>

@{
    ViewData["Title"] = "Zadania";
}

<h1>Zadania</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Stwórz nowe zadanie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Opis zadania
            </th>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projekt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CzyZakonczony)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Projekt.Nazwa)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.TaskId" class="btn btn-secondary">Edytuj</a> |
                    <a asp-action="Details" asp-route-id="@item.TaskId" class="btn btn-info">Szczegóły</a>|
                <a asp-action="Delete" asp-route-id="@item.TaskId" class="btn btn-danger">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
