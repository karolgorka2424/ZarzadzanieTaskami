@model ZarzadzanieTaskami.Models.ProjectTask

@{
    ViewData["Title"] = "Usuń zadanie";
}

<h1>Usuń</h1>

<h3>Czy jesteś pewny że chcesz to usunąć?</h3>
<div>
    <h4>Zadanie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class = "col-sm-2">
            Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CzyZakonczony)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Projekt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Projekt.Nazwa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TaskId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">wróć do zadań</a>
    </form>
</div>
