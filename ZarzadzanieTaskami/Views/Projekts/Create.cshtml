@model ZarzadzanieTaskami.Models.Projekt

@{
    ViewData["Title"] = "Tworzenie projektu";
}

<h1>Stwórz projekt</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">wróć do projektów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
